
@{
    ViewData["Title"] = "Index";
}

<section class="breadcumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcumb-text">
                    <h4>Check Out</h4>
                </div>
                <div class="breadcumb-links">
                    <a class="a-links" href="">Home ></a>
                    <a class="a-links" href="">Shop ></a>
                    <span>Check Out</span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="checkout-spad">
    <div class="container">
        <div class="checkout-form">
            <form action="#">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <h6 class="checkout-title">Billing Details</h6>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout-input">
                                    <p>
                                        First Name
                                        <span>*</span>
                                    </p>
                                    <input required type="text" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout-input">
                                    <p>
                                        Last Name
                                        <span>*</span>
                                    </p>
                                    <input required type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="checkout-input">
                            <p>
                                Address
                                <span>*</span>
                            </p>
                            <input required type="text" placeholder="Street Address" />
                            <input required type="text" placeholder="Apartment, suite" />
                        </div>
                        <div class="checkout-input">
                            <p>
                                Town/City
                                <span>*</span>
                            </p>
                            <input required type="text" />
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout-input">
                                    <p>
                                        Phone
                                        <span>*</span>
                                    </p>
                                    <input required type="text" />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout-input">
                                    <p>
                                        Email
                                        <span>*</span>
                                    </p>
                                    <input required type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="checkout-input">
                            <p>
                                Order Notes
                            </p>
                            <input type="text" placeholder="Notes about your order, e.g. special notes for delivery" />
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout-order">
                            <h4 class="order-title"> Your Order</h4>
                            <div class="checkout-order-products">
                                Product <span>Total</span>
                            </div>
                            <ul class="checkout-total-products">
                                <li>Converse All Star HI Black <span>$75.00</span></li>
                                <li>Converse All Star HI Yellow <span>$105.00</span></li>
                                <li>Converse All Star HI White <span>$95.00</span></li>
                            </ul>
                            <ul class="checkout-total-all">
                                <li>Subtotal <span>$275.00</span></li>
                                <li>Total <span>$275.00</span></li>
                            </ul>
                            <div class="checkout-box">
                                <button type="submit" class="site-btn">PLACE ORDER</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</section>